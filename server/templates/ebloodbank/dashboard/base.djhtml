<!doctype html>

{% set name_full  = "E-Blood Bank Eight Semester Project" %}
{% set name_short = "E-Blood Bank" %}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/1.5.2/css/perfect-scrollbar.min.css">
    <link rel="stylesheet" type="text/css" href="/static/dashboard/css/dashboard.css">
    {% block headCSS %}{% endblock %}
    {% block head %}{% endblock %}
    <title>
        {{pageTitle}} | {{name_short}}
    </title>
</head>

<body>
    <header>
        {% block bodyHead %}{% endblock %}
        <div class="main-header">
            <div class="container-fluid">
                <div class="main-header-left">
                    <a class="toggle-sidebar-icon">
                        <i class='bx bx-menu-alt-left'></i>
                    </a>
                </div>
                <div class="main-header-center">

                </div>
                <div class="main-header-right">
                    <a class="header-logout-icon" href="/logout">
                        <i class='bx bx-exit'></i>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <sidebar>
        <div class="main-sidebar">
            <div class="main-sidebar-header">
                <a href="/dashboard">
                    <h2 class="full-logo">E-Blood Bank</h2>
                    <h2 class="toggled-logo"><i class='bx bxs-donate-blood'></i></h2>
                </a>
            </div>
            <div class="main-sidebar-body">
                <ul class="nav">
                    <li class="nav-header">
                        <span class="nav-header-label">Dashboard</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class='bx bxs-dashboard' ></i>
                            <span class="nav-link-label">Overview</span>
                        </a>
                    </li>
                    {% if current_user.role == 'ADMIN' %}
                    <li class="nav-header">
                        <span class="nav-header-label">Users</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/user-list">
                            <i class='bx bx-street-view'></i>
                            <span class="nav-link-label">All Users</span>
                        </a>
                    </li>
                    {% endif %}
                    <li class="nav-header">
                        <span class="nav-header-label">Blood Bank</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/blood-request">
                            <i class='bx bx-donate-blood'></i>
                            <span class="nav-link-label">Request Blood</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/blood-donate">
                            <i class='bx bxs-vial'></i>
                            <span class="nav-link-label">Donate Now</span>
                        </a>
                    </li>
                    {% if current_user.role == 'ADMIN' %}
                    <li class="nav-header">
                        <span class="nav-header-label">Notice</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/all-notice">
                            <i class='bx bx-user-voice'></i>
                            <span class="nav-link-label">All Notices</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/add-notice">
                            <i class='bx bx-add-to-queue' ></i>
                            <span class="nav-link-label">Add New Notice</span>
                        </a>
                    </li>
                    <li class="nav-header">
                        <span class="nav-header-label">Blood Banks</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/all-bloodbank">
                            <i class='bx bx-clinic'></i>
                            <span class="nav-link-label">All Blood Banks</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/add-bloodbank">
                            <i class='bx bx-add-to-queue' ></i>
                            <span class="nav-link-label">Add New Blood Banks</span>
                        </a>
                    </li>
                    <li class="nav-header">
                        <span class="nav-header-label">Ambulance Info</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class='bx bxs-ambulance'></i>
                            <span class="nav-link-label">All Ambulance</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class='bx bx-add-to-queue' ></i>
                            <span class="nav-link-label">Add New Ambulance</span>
                        </a>
                    </li>
                    <li class="nav-header">
                        <span class="nav-header-label">Subscribers</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/subscribers">
                            <i class='bx bx-mail-send'></i>
                            <span class="nav-link-label">All Subscribers</span>
                        </a>
                    </li>
                    {% endif %}
                    <li class="nav-header">
                        <span class="nav-header-label">Settings</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/profile">
                            <i class='bx bxs-user-account'></i>
                            <span class="nav-link-label">My Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </sidebar>
    <main>
        <div class="main-content">
            <div class="container-fluid">
                <div class="page-header-block">
                    <div class="breadcrumb-block">
                        <h2 class="page-header">{{pageTitle}}</h2>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{pageTitle}}</li>
                        </ol>
                    </div>
                    <div class="breadcrumb-btn">
                        <a type="button" class="btn btn-primary" href="/">Goto Home <i class='bx bx-right-arrow-alt'></i></a>
                    </div>
                </div>
                {% block content %}{% endblock %}
            </div>
        </div>
    </main>
    <footer class="main-footer">
        <div class="container-fluid text-center">
            <span class="author-content">Designed & Developed By Eight Semester (Computer Department)</span>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/1.5.2/perfect-scrollbar.min.js"></script>
    <script>
        $(document).ready(function(){
            $(".toggle-sidebar-icon").click(function(){
                $(".main-sidebar").toggleClass("active");
                $(".main-sidebar-header").toggleClass("active");
                $(".main-header").toggleClass("toggledSidebar");
                $(".main-content").toggleClass("toggledSidebar");
            });
        });
    </script>
    <script type="text/javascript">
        $(function($) {
          let url = window.location.href;
          $('.nav-item a').each(function() {
            if (this.href === url) {
              $(this).closest('.nav-item').addClass('active');
            }
          });
        });
    </script>
    <script type="text/javascript">
        $('.main-sidebar').each(function() { 
            const ps = new PerfectScrollbar($(this)[0]); 
        });
    </script>
    {% block tail %}{% endblock %}
</body>
</html>